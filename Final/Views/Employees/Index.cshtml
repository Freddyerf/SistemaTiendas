@model IEnumerable<Final.Models.Entities.Employee>

@{
    ViewData["Title"] = "Employees";
    ViewData["Employee"] = "active";
    ViewData["EmployeeList"] = "active";
    ViewData["EmployeeExpanded"] = "true";
    ViewData["EmployeeCollapsedIn"] = "in";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-content">
                <div class="toolbar">
                    <!--Here you can write extra buttons/actions for the toolbar-->
                </div>
                <table id="bootstrap-table" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                    <thead>
                        <tr>

                            <th data-field="cedula" class="text-center">@Html.DisplayNameFor(model => model.Cedula)</th>
                            <th data-field="name" data-sortable="true">@Html.DisplayNameFor(model => model.Name)</th>
                            <th data-field="lastName" data-sortable="true">@Html.DisplayNameFor(model => model.LastName)</th>
                            <th data-field="salary" data-sortable="true">@Html.DisplayNameFor(model => model.Salary)</th>
                            <th data-field="position" data-sortable="true">@Html.DisplayNameFor(model => model.Position)</th>
                            <th data-field="telephone" data-sortable="true">@Html.DisplayNameFor(model => model.Telephone)</th>
                            <th data-field="actions" class="td-actions text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @Html.DisplayFor(modelItem => item.Cedula) </td>
                                <td> @Html.DisplayFor(modelItem => item.Name) </td>
                                <td> @Html.DisplayFor(modelItem => item.LastName) </td>
                                <td> @Html.DisplayFor(modelItem => item.Salary) </td>
                                <td> @Html.DisplayFor(modelItem => item.Position) </td>
                                <td> @Html.DisplayFor(modelItem => item.Telephone) </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-simple btn-info btn-icon table-action view"><i class="ti-image"></i></a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-simple btn-warning btn-icon table-action edit"><i class="ti-pencil-alt"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-simple btn-danger btn-icon table-action remove"><i class="ti-close"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div><!--  end card  -->
    </div> <!-- end col-md-12 -->
</div> <!-- end row -->

@section Scripts {
    @await Html.PartialAsync("_ManageScriptsPartial")
}