@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}



<div id="home" class="section section-header">
    <div class="parallax filter filter-color-blue">
        <div class="image"
             style="background-image: url('/assets/img/background/blurry.jpeg')">
        </div>
        <div class="container">
            <div class="content">
                <div class="title-area">
                    <h1 class="title-modern">SimpleStore</h1>
                    <h3>Probably the easier store manager in the world</h3>
                    <div class="separator line-separator">♦</div>
                </div>
                <div class="button-get-started">
                    <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-white btn-fill btn-lg ">
                        Get Started!
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="ourServ" class="section">
    <div class="container">
        <div class="row">
            <div class="title-area">
                <h2>Our Services</h2>
                <div class="separator separator-danger">✻</div>
                <p class="description">We promise you a new way to develop your store management. We invest in the user experience in a way that we turn work into something easy so that you feel comfortable even when you don't want to</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="info-icon">
                    <div class="icon text-danger">
                        <i class="pe-7s-box1"></i>
                    </div>
                    <h3>Stock</h3>
                    <p class="description">Keep track of your stock. Add, edit and delete items from your stock anytime.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="info-icon">
                    <div class="icon text-danger">
                        <i class="pe-7s-note2"></i>
                    </div>
                    <h3>Employees</h3>
                    <p class="description">Feel free to navigate between your employees as easy as walk to the park</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="info-icon">
                    <div class="icon text-danger">
                        <i class="pe-7s-graph2"></i>
                    </div>
                    <h3>Music</h3>
                    <p class="description">View the stats of your store live. Supervise your stock and more!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="whoWeAre" class="section section-our-team-freebie">
    <div class="parallax filter filter-color-black">
        <div class="image" style="background-image:url('/assets/img/background/header-2.jpeg')">
        </div>
        <div class="container">
            <div class="content">
                <div class="row">
                    <div class="title-area">
                        <h2>Who We Are</h2>
                        <div class="separator separator-danger">✻</div>
                        <p class="description">Our compromise is with the user. We give 24/7 full support to this application, and that is why Simple Store is so user friendly.</p>
                    </div>
                </div>
                <div class="team">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="row">
                                <div class="col-md-4 col-md-offset-4">
                                    <div class="card card-member">
                                        <a href="https://github.com/Freddyerf" target="_blank">
                                            <div class="content" style="cursor:pointer;">
                                                <div class="avatar avatar-danger">
                                                    <img alt="..." class="img-circle" src="~/assets/img/faces/freddy.png" />
                                                </div>
                                                <div class="description">
                                                    <h3 class="title">Freddy</h3>
                                                    <p class="small-text">CEO / Software developer</p>
                                                    <p class="description">I'm a freelancer dedicated to my work. I will give you the best service in the amount of time you need. I don't want my time to be wasted so I don't waste other people's time. If I commit to you, I will finish my work.</p>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="contact"class="section section-small">
    <div class="container">
        <div class="title-area">
            <h2 class="text-white">Do you want to work with us?</h2>
            <div class="separator line-separator">♦</div>
            <p class="description"> We are keen on listening to any request you may have, We'd love to hear your inquiries</p>
        </div>
        <div style="text-align: center;">
            <a  href="mailto:simplestorefreddyerf@gmail.com" class="btn btn-danger btn-fill btn-lg">Contact Us</a>
        </div>
    </div>
</div>


