@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";

<div data-notify="container" class="col-xs-11 col-sm-3 alert alert-@statusMessageClass animated fadeInDown" role="alert" data-notify-position="top-right" auto-close="4000"
     style="display: inline-block; 
            margin: 0px auto; 
            position: fixed; 
            transition: all 0.5s ease-in-out; 
            z-index: 1031; top: 20px; right: 20px; 
            animation-iteration-count: 1;">
    <button type="button" aria-hidden="true" class="close" data-notify="dismiss" data-dismiss="alert" 
            style="position: absolute; 
                   right: 10px; top: 5px; z-index: 10312;">×</button>
    <span data-notify="title">Notificación</span> 
    <span data-notify="message">@Model</span>
</div>
    
}
